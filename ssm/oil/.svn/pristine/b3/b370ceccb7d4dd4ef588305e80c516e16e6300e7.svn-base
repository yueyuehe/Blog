<style>
body {
	background: #fdf6fd;
}

.formbody {
	background: #fff;
	width: 1100px;
	position: relative;
	padding-bottom: 55px;
}

.mauto2, .mauto3, .mauto4, .mauto5 {
	position: absolute;
}

.mauto2 {
	bottom: -320px
}

.mauto3 {
	bottom: -500px;
	padding-bottom: 55px;
}

.mauto5 {
	bottom: -350px;
	padding-bottom: 60px;
	margin-left: 350px;
}

.mauto1 {
	position: absolute;
	top: -45px;
}

.forminfo {
	width: 965px;
}
.forminfo li{margin-bottom:0;}
.new-table-title {
	letter-spacing: 3px;
}

.record-top div label {
	font-size: 13px;
}

